@model CityViewModel

<table class="table table-sm table-bordered m-0">
    <tr>
        <td class="text-left font-weight-bold">Cities number</td>
        <td class="text-right">
            @Model.Cities
        </td>
    </tr>
    <tr>
        <td class="text-left font-weight-bold">Population in total</td>
        <td class="text-right">
            @Model.Population.ToString("#,###")   
        </td>
    </tr>
</table>